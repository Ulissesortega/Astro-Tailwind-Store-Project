---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="space-y-4 p-6">
        <p class="text-sm text-gray-500">Small gray text</p>
        <p class="text-base text-black font-medium">Base size, medium weight</p>
        <p class="text-lg text-blue-600 font-semibold">Large blue text</p>
        <p class="text-xl text-red-500 font-bold uppercase">Extra large, bold, uppercase</p>
        <p class="text-2xl text-green-700 italic">2xl, green, italic</p>
        <p class="text-3xl text-purple-800 tracking-wide">3xl, purple, wide letter spacing</p>
        <p class="text-4xl text-yellow-600 underline decoration-dotted">
          4xl, yellow, dotted underline
        </p>
        <p class="text-5xl text-pink-500 line-through">5xl, pink, line-through</p>
        <p class="text-6xl text-indigo-700 text-center">6xl, indigo, centered</p>
      </div>
</Layout>
