---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import 'bootstrap/dist/css/bootstrap.css'
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">

    <title>Milzen Kitchen Cabinets</title>    
    
    <!-- Add custom transition styles -->
    <style>
      html,
      body {
        margin: 0;
        width: 100%;
        height: 100%;
      }
      
      /* Custom transition animation */
      :root {
        --transition-duration: 0.4s;
      }
      
      /* Zoom animation for our images */
      [data-astro-transition-scope=astro] {
        animation-duration: var(--transition-duration);
        animation-timing-function: ease-in-out;
      }
      
      /* Custom animation for the slide/zoom effect */
      @keyframes zoom-in {
        from {
          opacity: 0;
          transform: scale(0.9);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
      
      @keyframes zoom-out {
        from {
          opacity: 1;
          transform: scale(1);
        }
        to {
          opacity: 0;
          transform: scale(1.1);
        }
      }
      
      /* Apply the animations */
      [data-astro-transition-fallback=old] {
        animation-name: zoom-out;
      }
      
      [data-astro-transition-fallback=new] {
        animation-name: zoom-in;
      }
    </style>
  </head>  
  <body>
    <ClientRouter />
    <slot />
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script is:inline src="https://kit.fontawesome.com/059f4102ce.js" crossorigin="anonymous"></script>
  </body>
</html>